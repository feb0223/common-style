//
// Reset
// --------------------------------------------------

html
	font-size 62.5%
body
	font-family sans-serif
	color $tc-default
	background-color $bgc-default
	font-size $medium
	line-height 1.4
	/*min-height 1000px*/
h1,h2,h3,h4
	margin 0
	padding 0
	font-size inherit
	font-weight normal

ol,ul,dl,dt,dd
	list-style none
	margin 0
	padding 0
p
	margin 0

blockquote,
q
	quotes none
a
	text-decoration none
	color $tc-default
	
i
	font-style inherit

button,[type="submit"]
	padding 0
	margin 0
	border none
	background transparent
	cursor pointer

/*a, button, article ,div*/
	/*-webkit-tap-highlight-color inherit*/

iframe
	border none

hr
	margin 0
	border none

[type="text"],
[type="password"],
[type="email"],
[type="number"],
[type="tel"]
	margin 0
	padding 0
	outline none
	border none
	appearance none
	font-family Helvetica
	line-height 1.4

input[type="checkbox"]
	margin 0